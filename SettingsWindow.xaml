            HorizontalAlignment="Left"
            Height="64"
            VerticalAlignment="Top"
            Width="66"
            Cursor="Hand"
            RenderOptions.BitmapScalingMode="HighQuality"
            Source="/Images/starz.png" RenderTransformOrigin="0.5,0.5" Margin="16,29,0,0"/>
        <Image
            Panel.ZIndex="-2"
            x:Name="BackgroundImage"
