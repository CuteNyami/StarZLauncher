            HorizontalAlignment="Left"
            Margin="28,272,0,0"
            VerticalAlignment="Top"/>
        <Label
            Content="Settings"
            Foreground="AliceBlue"
            FontSize="35px"
            FontWeight="Bold"
            HorizontalAlignment="Left"
            Margin="115,1,0,0"
